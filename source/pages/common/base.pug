-
	let PROJECT_NAME = 'Diginetica test task'
	let title = PROJECT_NAME
	let currentPage = 'index.html'

block variables

include ./mixins
doctype html
html(lang="ru").page
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title=title
		link(rel="stylesheet", href="./css/style.css")
		script(src="js/main.js" defer)
		link(rel="preload" href="fonts/inter-400.woff2" as="font")
		link(rel="preload" href="fonts/inter-500.woff2" as="font")
		link(rel="preload" href="fonts/ptsans-400.woff2" as="font")
		link(rel="preload" href="fonts/ptsans-700.woff2" as="font")

	body._body
		include ./header
		main._main
			block main